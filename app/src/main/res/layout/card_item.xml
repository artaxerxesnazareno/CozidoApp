<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="212dp">

    <ImageView
        android:id="@+id/cityCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#e74c3c"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--Crie e importei o <shape/> em drawable para criar o formato circular do botÃ£o -->
    <Button
        android:id="@+id/btnCard"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bgbtn"
        android:fontFamily="@font/zingscript"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Ver Receita"
        android:textColor="#000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="clickReceita"
        tools:ignore="UsingOnClickInXml" />

    <!--        Vou importar o gradiente que esta em drawable para ser minha imagem de fundo-->

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/bgngambang"
        app:layout_constraintBottom_toBottomOf="@+id/cityCover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/zingscript"
        android:text="NEAR SOUTH ASIA"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteX="16dp"
        app:layout_editor_absoluteY="167dp" />
</androidx.constraintlayout.widget.ConstraintLayout>